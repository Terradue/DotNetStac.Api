{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "src/"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "buildCodeGen",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "src/Stac.Api.CodeGen/"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Copy Sentinel2 Collection to tmp",
            "command": "cp",
            "type": "shell",
            "args": [
                "-r",
                "src/Stac.Api.Tests/Resources/TestCatalogs/CatalogS2L2A/collections",
                "/tmp/StacApi/collections"
            ],
            "problemMatcher": [
                "$eslint-compact"
            ]
        }
    ]
}